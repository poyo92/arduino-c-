int my_number = 0;
const int trigPin = 6;
const int echoPin = 7;


long duration;
int distance;

void setup() {
 
  pinMode(trigPin, OUTPUT); 
  pinMode(echoPin, INPUT);
 
  pinMode(LED_BUILTIN, OUTPUT);

  Serial.begin(9600); 
  }

void loop() {

  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);

 
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10000);
  digitalWrite(trigPin, LOW);

 
  duration = pulseIn(echoPin, HIGH);

 
  distance = duration * 0.06 / 2;


  if (distance <20)  digitalWrite(LED_BUILTIN, HIGH), my_number++, Serial.println(my_number) ;
  else my_number--, (my_number =0), Serial.println(my_number) ;
}
